# =============================================================================
# Explain My Game - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://emg_user:emg_password@localhost:5432/explain_my_game

# -----------------------------------------------------------------------------
# OpenAI API (Required for AI reports)
# -----------------------------------------------------------------------------
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# -----------------------------------------------------------------------------
# Clerk Authentication
# -----------------------------------------------------------------------------
# Get your keys at: https://dashboard.clerk.com
#
# SECURITY NOTES:
# ---------------
# - In PRODUCTION (ENVIRONMENT=production): These keys are REQUIRED.
#   The app will FAIL TO START without valid Clerk keys.
#   No authentication bypass is allowed in production.
#
# - In DEVELOPMENT (ENVIRONMENT=development): These keys are OPTIONAL.
#   If not set, a dev auth bypass is available using:
#   Authorization: Bearer dev_user_seed_001
#   This is for local development convenience only.
#
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (shows detailed errors)
DEBUG=false

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Frontend URL (for CORS)
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database Seeding (Development only)
# -----------------------------------------------------------------------------
# Set to true to seed database with demo data on startup
SEED_DATABASE=true
